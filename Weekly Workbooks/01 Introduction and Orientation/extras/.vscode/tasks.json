{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build RedNoise Project", 
            "command": "make",
            "args": [
                "build/RedNoise" // 只编译，不运行
            ],
            "options": {
                // 你的根目录是 'extras', 所以路径是 'RedNoise'
                "cwd": "${workspaceFolder}/RedNoise" 
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}